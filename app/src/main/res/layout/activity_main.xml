<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/simpleAdapterActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/simple_adapter"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/arrayAdapterActivity"/>

    <Button
        android:id="@+id/arrayAdapterActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/array_adapter"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpleAdapterActivity"/>

    <Button
        android:id="@+id/baseAdapterActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/base_adapter"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleAdapterActivity"
        app:layout_constraintEnd_toStartOf="@+id/spinnerAdapterActivity"
        app:layout_constraintStart_toStartOf ="parent"/>

    <Button
        android:id="@+id/spinnerAdapterActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/spinner_adapter"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/simpleAdapterActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf ="@+id/baseAdapterActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>